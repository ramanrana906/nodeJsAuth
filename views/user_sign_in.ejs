

<link rel="stylesheet" href="/css/sign_in.css">
<section id="sign-in-form">

<div id="sign-in-div">


<h1>Sign In</h1>
<form action="/users/create-session" method="POST">
  <!-- Email input -->
  <div class="form-outline mb-4">
    <input type="email" name="email" placeholder="Your Email" required id="form2Example1" class="form-control" />
    <label class="form-label" for="email">Email address</label>
  </div>

  <!-- Password input -->
  <div class="form-outline mb-4">
    <input type="password" name="password" placeholder="Password" required id="form2Example2" class="form-control" />
    <label class="form-label" for="password">Password</label>
  </div>


  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
      <!-- Checkbox -->
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
        <label class="form-check-label" for="form2Example31"> Remember me </label>
      </div>
    </div>

    <div class="col">
      <!-- Simple link -->
      <a href="/auth/verify">Forgot password?</a>
    </div>
  </div>

  <!-- Submit button -->

  <input type="submit" value="Sign In"class="btn btn-primary btn-block mb-4">
  <!-- Register buttons -->
  <div class="text-center">
    <p>Not a member? <a href="/users/sign-up">Register</a></p>
    <p>or sign up with:</p>
   
    <a href="/users/auth/google"  class="btn btn-link btn-floating mx-1"><i class="fab fa-google"></i></a>


  </div>
</form>
</div>
</section>
<link rel="stylesheet" href="/css/sign-up.css">
<section id="sign-up-form">

<div id="sign-up-div">
<form action="/users/create" method="POST">

    <h1>Sign Up</h1>

    <!-- name input -->
    <div class="form-outline mb-4">
        <input type="text" name="name" placeholder="Your Name" required class="form-control" />
        <label class="form-label" for="Name">Name</label>
      </div>


    <!-- Email input -->
    <div class="form-outline mb-4">
      <input type="email" name="email" placeholder="Your Email" required id="form2Example1" class="form-control" />
      <label class="form-label" for="email">Email address</label>
    </div>
  
    <!-- Password input -->

    <div class="form-outline mb-4">
        <input type="password" name="password" placeholder="Password" required id="form2Example2" class="form-control" />
        <label class="form-label" for="password">Password</label>
      </div>
  

    <div class="form-outline mb-4">
      <input type="password" name="confirm_password" placeholder="Confirm Password" required id="form2Example2" class="form-control" />
      <label class="form-label" for="confirm_password">Password</label>
    </div>
  
    <!-- Submit button -->
    <input type="submit" class="btn btn-primary btn-block mb-4" value="Sign Up">

  
    <!-- Register buttons -->
    <div class="text-center">
  
      <p>or sign up with:</p>
      
      <a href="/users/auth/google"  class="btn btn-link btn-floating mx-1"><i class="fab fa-google"></i></a>
      
  
     
    </div>
  </form>

</div>

</section>
